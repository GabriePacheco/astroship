---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      aspectRatio="4:3"
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Genera Enlaces de <strong class="text-degrade">WhatsApp</strong> con Facilidad.
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Potencia tus conversaciones en WhatsApp con enlaces y códigos QR
      personalizados. La forma más rápida y elegante de iniciar chats directos.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="ic:sharp-link" />
        Crea un link Gratis Ahora!
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="#"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon
          class="text-black w-4 h-4"
          name="ic:baseline-admin-panel-settings"
        />
        Crea tu link Gratis!
      </Link>
    </div>
  </div>
</main>
