---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title : "Whalink Ecuador";
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={'wha.link'} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Transforma la forma en que te conectas en WhatsApp. Genera enlaces y códigos QR personalizados para iniciar conversaciones directas con un solo clic. Simplifica el intercambio de números de teléfono y lleva tus conversaciones al siguiente nivel. ¡Experimenta la comodidad y la elegancia con nuestra herramienta única! Prueba ahora"
      canonical={canonicalURL}
      twitter={{
        creator: "@gp13_",
        site: "@whalink",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Whalink  - Potencia tus conversaciones en WhatsApp con enlaces y códigos QR personalizados. La forma más rápida y elegante de iniciar chats directos.`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Whalink Homepage Screenshot",
        },
      }}
    />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
